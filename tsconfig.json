{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "noUnusedLocals": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "noImplicitThis": false,
        "allowUnusedLabels": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "bin/*.ts",
        "**/*.ts"
    ]
}